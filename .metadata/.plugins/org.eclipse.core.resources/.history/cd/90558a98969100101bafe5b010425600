package ExceptionHandling;

import java.util.Scanner;

class PanCardMakingException extends Exception{
	PanCardMakingException(){
		super("Your age is not valid...!");
	}
	PanCardMakingException(String message){
		super(message);
	}
}
class CardMaking {
	     int age;
	     void show() {
	    	 Scanner sc=new Scanner(System.in);
	    	 System.out.println("Enter Your Age...!");
	    	 int age=sc.nextInt();
	    	try { 
	    		if(age<18) {
	    			throw new PanCardMakingException("You Are Eligibal Making Pa;n Card..!");
	    		}
	    		else {
	    			System.out.println("You Are Eligibal Making Pa;n Card..!");
	    		}
	    	} 
	    	catch(PanCardMakingException a) {
	    		a.printStackTrace();
	    	}
	    	if(age<18) {
	    		System.out.println("Sorry No Available your pan card...!");
	    	}
	    	else {
	    		System.out.println("You Can take Your card....!");
	    	}
       }
}
public class CheckedException {
    public static void main(String[] args) {
		CardMaking cardMaking = new CardMaking();
		cardMaking.show();
	}
}
