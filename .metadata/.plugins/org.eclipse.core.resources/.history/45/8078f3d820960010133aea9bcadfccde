package String;

public class String_Method {

	public static void main(String[] args) {
		
		             // 1st method
		
		  String str="       Hashim			"; 
		  
		  System.out.println(str.length());
		  int i=str.length(); 
		  if(str.length()==0){
			  
		  System.out.println("Please Enter password"); }
		  else {
		  System.out.println("You Entered Password Successfully");
		  
		  }					
						 
		         // 2nd method  

		  String s="";
		  if(s.isEmpty()) { 
			  
			  System.out.println("Please Enter password ");
		  }
		  else { System.out.println("You Entered Password Successfully ");
		  
		  }				
					 
		 
		   //  3rs method
		 String str2="Hashim";
		 String str3="Ansari";
		 String str4="Koilsa";
		 System.out.println(str2.compareTo(str3));
		 System.out.println(str2.compareToIgnoreCase(str3));
		 
		 String str5=str2.concat(str3);
			
		System.out.println(String.join("/",str2,str3,str4));
		  //3rd Method
		//System.out.println(str5.subSequence(2,str5.length()));
		System.out.println(str5.substring(0,str5.length()));
	}

}
