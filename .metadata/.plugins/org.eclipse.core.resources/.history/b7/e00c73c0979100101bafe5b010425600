package ExceptionHandling;

import java.util.Scanner;

@SuppressWarnings("serial")
class PanCardMakingException extends Exception{
	PanCardMakingException(){
		super("Your age is not valid...!");
	}
	PanCardMakingException(String message){
		super(message);
	}
}
class CardMaking {
	     int age;
	     @SuppressWarnings("resource")
		 void show() {
	    	 Scanner sc=new Scanner(System.in);
	    	 System.out.println("Enter Your Age...!");
	    	 int age=sc.nextInt();
	    	try { 
	    		if(age<=18) {
	    			throw new PanCardMakingException("You Are not Eligibal Making Pa;n Card..!");
	    		}
	    		else {
	    			System.out.println("You Are Eligibal Making Pan Card..!");
	    		}
	    	} 
	    	catch(PanCardMakingException a) {
	    	 System.out.println(a.getMessage());
	    	}
	    	if(age<=18) {
	    		System.out.println("Sorry No Available your pan card...!");
	    	}
	    	else {
	    		System.out.println("You Can take Your pan card....!");
	    	}
	    	sc.close();
       }
}
public class CheckedException {
    public static void main(String[] args) {
		CardMaking cardMaking = new CardMaking();
		cardMaking.show();
	}
}
